<main>

    <section id="details-page">

        <div class="main_card">
            <div class="card_left">
                <div class="card_datails">

                    <h1>Title: {{creatures.title}}</h1>
                    <h3>Created by an author: {{user.firstname}} {{user.lastname}}</h3>
                    <div class="card_animal">
                        <p class="card-keyword">Keyword: {{creatures.keyword}}</p>
                        <p class="card-location">Location: {{creatures.location}}</p>
                        <p class="card-date">Date: {{creatures.dateCreation}}</p>
                    </div>

                    <p class="disc">Description: {{creatures.description}}</p>

                    <!-- If there is no registered user, do not display buttons-->
                    {{#if isAuthenticated}}
                    <div class="social-btn">
                        <!-- Only for registered user and author of the post -->
                        {{#if isOwner}}
                        <a href="/creatures/{{creatures._id}}/edit" class="edit-btn">Edit</a>
                        <a href="/creatures/{{creatures._id}}/delete" class="del-btn">Delete</a>
                        {{else}}

                        {{#if isVoted}}
                        <!-- logged in user who has already voted-->
                        <p class="thanks-for-vote">Thanks For Voting</p>
                        <a href="/creatures/{{creatures._id}}/votedown" class="vote-down">DownVote -1</a>
                        {{else}}

                        <a href="/creatures/{{creatures._id}}/vote" class="vote-up">UpVote +1</a>
                        {{/if}}

                        <!-- logged in users, who have not yet voted-->



                        {{/if}}
                    </div>
                    {{/if}}
                </div>
            </div>
            <div class="card_right">
                <img src="{{creatures.image}}" alt="image">
            </div>
        </div>

    </section>

    <section id="votes">
        <div class="vote-info">
            <div class="card_left">
                <div class="card_datails">
                    <h1>Votes</h1>
                    <div class="card_vote">
                        <!-- Show the rating of votes, if there are no votes yet, the number must be 0. -->
                        <p class="PV">Total rating of votes: {{this.votedLength}}</p>
                    </div>
                    <!-- If there are already people who have cast their vote for the post, separate their emails with a comma and a space ", " -->
                    {{#if this.allVotedUsers}}
                    <p class="disc">People who voted for the post - {{this.allVotedUsers}}</p>
                    {{else}}
                    <!-- If not display: -->
                    <p class="disc">People who voted for the post - No one has voted yet.</p>
                    {{/if}}
                </div>
            </div>
        </div>
    </section>


</main>

