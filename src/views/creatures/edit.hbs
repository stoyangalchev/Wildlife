<main>
    <section id="edit-page">
        <div class="editSection">
            <div class="info">
                <h2>Edit your post, share information about wildlife.</h2>
            </div>

            <form action="/creatures/{{creature._id}}/edit" method="post" class="editForm">
                <h2>Edit Post</h2>
                <ul class="noBullet">
                    <li>
                        <label for="name">Title:</label>
                        <input type="text" class="inputFields" id="title" placeholder="title" name="title"
                            value="{{creature.title}}" />
                    </li>
                    <li>
                        <label for="age">Keyword:</label>
                        <input type="text" class="inputFields" id="keyword" placeholder="keyword" name="keyword"
                            value="{{creature.keyword}}" />
                    </li>
                    <li>
                        <label for="location">Location:</label>
                        <input type="text" class="inputFields" id="location" placeholder="Location" name="location"
                            value="{{creature.location}}" />
                    </li>
                    <li>
                        <label for="description">Date of creation:</label>
                        <textarea id="dateCreation" class="inputFields" name="dateCreation"
                            placeholder="dateCreation">{{creature.dateCreation}}</textarea>
                    </li>


                    <li>
                        <label for="image">Wildlife image:</label>
                        <input type="text" class="inputFields" id="image" placeholder="Link to image" name="image"
                            value="{{creature.image}}" />
                    </li>
                    <li>
                        <label for="description">Description:</label>
                        <textarea id="description" class="inputFields" name="description"
                            placeholder="Description">{{creature.description}}</textarea>
                    </li>
                    <li id="center-btn">
                        <button id="edit-btn" type="submit">Edit Photo</button>
                    </li>
                </ul>
            </form>
        </div>
    </section>
</main>