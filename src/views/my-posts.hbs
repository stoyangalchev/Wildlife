<main>
    <div class="profile">
        <div class="profile-data">
            <div class="profile_img">
                <div class="image">
                    <img src="/static/images/person.png" alt="img8">
                </div>
            </div>
            <div class="personal">
                <div class="edit">
                    <!-- User Username -->
                    <p>{{user.username}}</p>
                </div>
                <div class="data">

                    <!-- Total Number of Photos by the User -->
                    <span>{{creaturesCount}}</span>
                    <p>photos</p>

                </div>
                <!-- User Email Address -->
                <p class="email">{{owner.email}}</p>
            </div>
        </div>

        <!-- Start Uploaded Photos Section -->
        <div class="pet-photos">
            {{#each creatures}}
            {{> profile-card}}
            {{/each}}

            <!--If there are no photo yet!-->
            {{#unless creatures}}
            <article class="not-available-photo">
                <h1>You haven't uploaded photos yetâ€¦</h1>
            </article>
            {{/unless }}

        </div>

    </div>

</main>

